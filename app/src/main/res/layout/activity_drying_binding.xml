<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DryingBindingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/Drying_Binding_Cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:drawableStart="@drawable/before"
            android:text="取消"
            android:textColor="@color/titlecolor"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Drying_Binding_Title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="乾燥機情報紐付け"
            android:textColor="@color/text_title"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Drying_Binding_Confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="確定"
            android:textColor="@color/titlecolor"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:background="#efeff4"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Drying1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="乾燥機を選択する"
                android:paddingStart="10dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Drying_Key"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:gravity="left|center_vertical"
                    android:paddingStart="10dp"
                    android:text="乾燥機情報:"
                    android:textColor="#7a8caf"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Drying_Value"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:drawableRight="@drawable/right"
                    android:paddingEnd="10dp"
                    android:textColor="@color/dark"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="15dp"
                    android:autoSizeMaxTextSize="17dp"
                    android:textSize="17dp"
                    android:text="乾燥機を選択する" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/dark" />

            <TextView
                android:id="@+id/Drying2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="乾燥機一覧から対象乾燥機を選択する"
                android:paddingStart="10dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/Drying3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Drying4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="紐付け先NFCタグを選択する"
                android:paddingStart="10dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Drying_NFC_Key"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:gravity="left|center_vertical"
                    android:paddingStart="10dp"
                    android:text="NFCタグ情報:"
                    android:textColor="#7a8caf"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Drying_NFC_Value"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:drawableRight="@drawable/right"
                    android:paddingEnd="10dp"
                    android:textColor="@color/dark"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="15dp"
                    android:textSize="17dp"
                    android:autoSizeMaxTextSize="17dp"
                    android:text="NFCタグIDを入力する"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/dark" />

            <TextView
                android:id="@+id/Drying5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="手動入力やNFCピッでNFCタグ対象を選択する"
                android:paddingStart="10dp"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>