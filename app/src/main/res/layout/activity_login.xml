<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/Login_Cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="取消"
            android:textColor="@color/titlecolor"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Login_Title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="ようこそ！"
            android:textColor="@color/text_title"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Login_Confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="ログイン"
            android:textColor="@color/titlecolor"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e6e9"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="672dp"
        android:background="#efeff4"
        android:orientation="vertical"

        android:paddingTop="25dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:id="@+id/login_head"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="left|center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="アカウントを入力" />

        <View
            android:id="@+id/view1"
            android:layout_below="@+id/login_head"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/dark" />

        <TextView
            android:id="@+id/login_key"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/view1"
            android:gravity="center_vertical|left"
            android:paddingStart="10dp"
            android:text="アカウント："
            android:background="@color/white"
            android:textColor="#7a8caf"
            android:textSize="17dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/login_value"
            android:layout_alignTop="@+id/login_key"
            android:layout_toEndOf="@+id/login_key"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="アカウントを入力"
            android:paddingEnd="20dp"
            android:textColor="@color/dark"
            android:textSize="20dp" />

        <View
            android:id="@+id/view2"
            android:layout_below="@+id/login_value"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/dark" />

        <TextView
            android:id="@+id/pwd_head"
            android:layout_below="@+id/view2"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="left|center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="パスワードを入力" />

        <View
            android:id="@+id/view3"
            android:layout_below="@+id/pwd_head"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/dark" />

        <TextView
            android:id="@+id/pwd"
            android:layout_below="@+id/view3"
            android:layout_alignLeft="@+id/login_key"
            android:layout_alignRight="@+id/login_key"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:background="@color/white"
            android:paddingStart="10dp"
            android:text="パスワード："
            android:textColor="#7a8caf"
            android:textSize="17dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pwd_text"
            android:layout_toEndOf="@+id/pwd"
            android:layout_alignTop="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:ems="10"
            android:hint="パスワードを入力"
            android:inputType="textPassword"
            android:textColor="@color/dark"
            android:textSize="20dp" />

        <View
            android:id="@+id/view4"
            android:layout_below="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/dark" />

        <TextView
            android:id="@+id/pwd_foot"
            android:layout_below="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="半角英数で入力してください" />

    </RelativeLayout>
</LinearLayout>